numero = int(input("Informe um número: "))

if numero % 2 == 0:
    if numero > 0:
        print("Número {} par e positivo.".format(numero))
    else:
        print("Número {} par e negativo.".format(numero))
        
else:
    if numero > 0:
        print("Número {} ímpar e positivo.".format(numero))
    else:
        print("Número {} ímpar e negativo.".format(numero))   